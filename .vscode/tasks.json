{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "執行主程式",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": ["main.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "執行測試",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": ["test_modules.py"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "安裝依賴套件",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": ["-m", "pip", "install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "編譯成exe",
            "type": "shell",
            "command": "build.bat",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "編譯除錯版exe",
            "type": "shell",
            "command": "build_debug.bat",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Pylint檢查",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": ["-m", "pylint", "main.py", "modules/"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "清理編譯檔案",
            "type": "shell",
            "command": "cmd",
            "args": ["/c", "if exist build rmdir /s /q build && if exist dist rmdir /s /q dist && if exist *.spec del /q *.spec && echo 清理完成"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}
